@page
@model Front_end.Pages.AdminClasses.IndexModel
@{
    ViewData["Title"] = "Criticore - Manage Classes";
    Layout = "~/Pages/Shared/_AdminSidebar.cshtml";
}

<div class="container py-5">
    <h1 class="mb-4 display-6 fw-bolder text-primary">Class List</h1>

    @* --- Optional: Add a success message area after an operation --- *@
    @if (!string.IsNullOrEmpty(Model.TempData["SuccessMessage"] as string))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @Model.TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @* --- End Optional Success Message --- *@

    <div class="d-flex justify-content-between align-items-center mb-4">
        <a asp-page="Create" class="btn btn-primary shadow-sm fw-semibold">
            <i class="bi bi-plus-circle me-2"></i>+ Create Class
        </a>
        @* Optional: Add search/filter here later *@
    </div>

    <div class="table-responsive shadow-lg rounded-3 overflow-hidden">
        <table class="table table-hover align-middle mb-0">
            <thead class="bg-primary text-white">
                <tr>
                    <th scope="col" class="py-3">Class ID</th>
                    <th scope="col" class="py-3">Class Name</th>
                    <th scope="col" class="py-3">Description</th>
                    <th scope="col" class="py-3 text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cls in Model.Classes)
                {
                    <tr>
                        <td class="fw-bold text-primary">@cls.ClassId</td>
                        <td>@cls.ClassName</td>
                        <td class="text-muted text-truncate" style="max-width: 300px;">@cls.Description</td>
                        <td class="text-center" style="min-width: 250px;">
                            <a asp-page="Details" asp-route-id="@cls.ClassId" class="btn btn-outline-info btn-sm me-2">
                                <i class="bi bi-info-circle"></i> Details
                            </a>
                            <a asp-page="Edit" asp-route-id="@cls.ClassId" class="btn btn-outline-warning btn-sm me-2">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <form method="post" asp-page-handler="Delete" asp-route-id="@cls.ClassId" style="display:inline" onsubmit="return confirm('Are you sure you want to delete this class?');">
                                <button type="submit" class="btn btn-outline-danger btn-sm">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                }
                @if (!Model.Classes.Any())
                {
                    <tr>
                        <td colspan="4" class="text-center text-muted py-4">No classes have been created yet.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>