@page
@model Front_end.Pages.Payment.CreateModel
@{
    ViewData["Title"] = "Select Teacher Subscription Plan";
    // Keeping the Homepage Layout for consistency with the navigation bar
    Layout = "~/Pages/Shared/_HomepageLayout.cshtml";
}

@* If you wish to keep Layout = null, use the code below: *@
@* @{
    ViewData["Title"] = "Select Teacher Subscription Plan";
    Layout = null; // Keep Layout = null
} *@

@* START: MEMORIZED NAVBAR *@
<body class="bg-[#f0f4ff] text-gray-800 min-h-screen">
    <header class="flex justify-between items-center px-8 py-3 bg-white shadow-sm">
        <div class="flex items-center gap-3 text-2xl font-bold">
            <a href="/">
                <img src="@Url.Content("~/images/CriticoreLogoText.png")" alt="Criticore Logo" class="h-10">
            </a>
        </div>
        <nav class="hidden md:flex gap-10 text-base font-semibold">
            <a asp-page="/class/classlist" class="hover:text-blue-600">Classrooms</a>
            <a asp-page="/Payment/create" class="hover:text-blue-600">Payment</a>
            <a asp-controller="Leaderboard" asp-action="Index" class="hover:text-blue-600">Feature 2</a>
            <a asp-controller="Resource" asp-action="Index" class="hover:text-blue-600">Feature 3</a>
            <a asp-page="/SignIn" class="hover:text-blue-600">Sign In</a>
        </nav>
        <a asp-page="/SignIn"
           class="bg-blue-600 text-white px-5 py-3 rounded-md text-base font-semibold hover:bg-blue-700">
            Get Started
        </a>
    </header>
    @* END: MEMORIZED NAVBAR *@

    <section class="container mx-auto py-12 px-4">
        <h2 class="text-3xl font-extrabold text-gray-900 text-center mb-10">Select Teacher Subscription Plan</h2>
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative max-w-6xl mx-auto mb-6" role="alert">
                <strong class="font-bold">Error!</strong>
                <span class="block sm:inline">@Model.ErrorMessage</span>
            </div>
        }
        @if (!string.IsNullOrEmpty(Model.SuccessMessage))
        {
            <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative max-w-6xl mx-auto mb-6" role="alert">
                <strong class="font-bold">Success!</strong>
                <span class="block sm:inline">@Model.SuccessMessage</span>
            </div>
        }
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-6xl mx-auto">

            <div class="bg-white rounded-xl shadow-lg hover:shadow-xl transition-shadow duration-300 flex flex-col">
                <div class="p-6 bg-blue-600 text-white rounded-t-xl text-center">
                    <h4 class="text-xl font-bold">Basic Plan</h4>
                </div>
                <div class="p-8 flex flex-col flex-grow">
                    <h1 class="text-4xl font-extrabold mb-4 text-center">
                        **100,000 VNĐ** <small class="text-xl font-normal text-gray-500">/ month</small>
                    </h1>
                    <ul class="list-disc list-inside text-left space-y-2 text-gray-600 mb-8 flex-grow">
                        <li>✔️ Duration: **1 Month**</li>
                        <li>✔️ Full access to teacher features.</li>
                        <li>✔️ Basic Support.</li>
                    </ul>

                    @* Form for 1 month plan *@
                    <form method="post" class="mt-auto">
                        <input type="hidden" asp-for="Input.PackageName" value="1 Month Plan" />
                        <input type="hidden" asp-for="Input.Price" value="100000" />
                        <input type="hidden" asp-for="Input.DurationInMonths" value="1" />

                        <button type="submit" class="w-full bg-blue-600 text-white px-6 py-3 rounded-lg text-lg font-semibold hover:bg-blue-700 transition">
                            Subscribe 1 Month
                        </button>
                    </form>
                </div>
            </div>

            <div class="bg-white rounded-xl shadow-2xl ring-4 ring-green-500 flex flex-col transform scale-[1.03]">
                <div class="p-6 bg-green-600 text-white rounded-t-xl text-center">
                    <h4 class="text-xl font-bold">Savings Plan (Popular)</h4>
                </div>
                <div class="p-8 flex flex-col flex-grow">
                    <h1 class="text-4xl font-extrabold mb-4 text-center text-green-600">
                        **540,000 VNĐ** <small class="text-xl font-normal text-gray-500">/ 6 months</small>
                    </h1>
                    <ul class="list-disc list-inside text-left space-y-2 text-gray-600 mb-8 flex-grow">
                        <li>🔥 Duration: **6 Months** (**Save 10%!**)</li>
                        <li>✔️ Full access to teacher features.</li>
                        <li>✔️ Priority Support.</li>
                    </ul>

                    @* Form for 6 month plan *@
                    <form method="post" class="mt-auto">
                        <input type="hidden" asp-for="Input.PackageName" value="6 Month Plan" />
                        <input type="hidden" asp-for="Input.Price" value="540000" />
                        <input type="hidden" asp-for="Input.DurationInMonths" value="6" />

                        <button type="submit" class="w-full bg-green-600 text-white px-6 py-3 rounded-lg text-lg font-semibold hover:bg-green-700 transition">
                            Subscribe 6 Months
                        </button>
                    </form>
                </div>
            </div>

            <div class="bg-white rounded-xl shadow-lg hover:shadow-xl transition-shadow duration-300 flex flex-col">
                <div class="p-6 bg-red-600 text-white rounded-t-xl text-center">
                    <h4 class="text-xl font-bold">Professional Plan</h4>
                </div>
                <div class="p-8 flex flex-col flex-grow">
                    <h1 class="text-4xl font-extrabold mb-4 text-center">
                        **960,000 VNĐ** <small class="text-xl font-normal text-gray-500">/ year</small>
                    </h1>
                    <ul class="list-disc list-inside text-left space-y-2 text-gray-600 mb-8 flex-grow">
                        <li>⭐ Duration: **12 Months** (**Save 20%!**)</li>
                        <li>✔️ 24/7 Support.</li>
                        <li>✔️ Premium features.</li>
                    </ul>

                    @* Form for 12 month plan *@
                    <form method="post" class="mt-auto">
                        <input type="hidden" asp-for="Input.PackageName" value="12 Month Plan" />
                        <input type="hidden" asp-for="Input.Price" value="960000" />
                        <input type="hidden" asp-for="Input.DurationInMonths" value="12" />

                        <button type="submit" class="w-full bg-red-600 text-white px-6 py-3 rounded-lg text-lg font-semibold hover:bg-red-700 transition">
                            Subscribe 12 Months
                        </button>
                    </form>
                </div>
            </div>

        </div>
    </section>

    @* START: MEMORIZED FOOTER *@
    <footer class="bg-gray-50 border-t py-6 text-base text-gray-500 mt-auto">
        <div class="max-w-7xl mx-auto px-4 flex flex-col sm:flex-row justify-between items-center">
            <p class="mb-2 sm:mb-0">© 2025 Criticore. Empowering Critical Thinking Through Conversation.</p>
            <div class="flex gap-6">
                <a href="#" class="hover:text-gray-800">Terms</a>
                <a href="#" class="hover:text-gray-800">Privacy</a>
                <a href="mailto:criticore.helpdesk@gmail.com" class="hover:text-gray-800">Support</a>
            </div>
        </div>
    </footer>
    @* END: MEMORIZED FOOTER *@
</body>