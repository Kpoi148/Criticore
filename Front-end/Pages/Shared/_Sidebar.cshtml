<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <!-- CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Front_end.styles.css" asp-append-version="true" />
    <!-- Favicon -->
    <link rel="icon" type="image/png" href="~/images/CriticoreLogoNonText.png" />
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="min-h-screen bg-gray-50 flex">
    <!-- Sidebar dùng chung -->
    <aside class="w-64 bg-white border-r hidden md:flex flex-col items-center py-6">
        <div class="mb-8">
            <a href="/">
                <img src="~/images/CriticoreLogoText.png" alt="Criticore Logo" class="h-14 mx-auto">
            </a>
        </div>
        <nav class="flex flex-col w-full space-y-2 text-lg px-4 flex-1">
            <a href="/Class/Classlist" class="flex items-center gap-3 px-3 py-2 bg-gray-100 text-gray-900 rounded font-medium">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M12 6H6a2 2 0 00-2 2v10a2 2 0 002 2h6m6-14h-6a2 2 0 00-2 2v10a2 2 0 002 2h6a2 2 0 002-2V8a2 2 0 00-2-2z" />
                </svg>
                Classrooms
            </a>
            <!-- Spacer to push Sign out to the bottom -->
            <div class="flex-1"></div>
            <a href="javascript:void(0)" class="flex items-center gap-3 px-3 py-2 text-red-600 hover:bg-red-50 rounded" onclick="logout()">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a2 2 0 01-2 2H7a2 2 0 01-2-2V7a2 2 0 012-2h4a2 2 0 012 2v1" />
                </svg>
                Sign out
            </a>
        </nav>
    </aside>
    <!-- Nội dung chính -->
    <main class="flex-1">
        @RenderBody()
    </main>
    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>