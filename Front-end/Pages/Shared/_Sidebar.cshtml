@*
    Layout dùng chung cho các trang có Sidebar (Classroom, Calendar, v.v.)
*@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <!-- CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Front_end.styles.css" asp-append-version="true" />
    <!-- Favicon -->
    <link rel="icon" type="image/png" href="~/images/CriticoreLogoNonText.png" />
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="min-h-screen h-screen bg-gray-50 flex overflow-hidden">
    <!-- Sidebar dùng chung -->
    <aside class="w-72 bg-slate-50 hidden md:flex flex-col items-center py-6 h-screen overflow-y-auto">
        <!-- Tăng w-64 lên w-72 để có space -->
        <!-- Logo -->
        <div class="mb-8">
            <a href="/Class/Classlist">
                <img src="~/images/CriticoreLogoText.png" alt="Criticore Logo" class="h-10 mx-auto">
            </a>
        </div>
        <nav class="flex flex-col w-full space-y-2 text-lg px-6 flex-1">
            <!-- Giữ text-lg -->
            <!-- Nhóm chức năng trên -->
            <a href="/Class/Classlist"
               class="flex items-center gap-3 px-3 py-2 text-blue-900 rounded-md font-medium overflow-hidden truncate
                  hover:bg-blue-200 hover:scale-105 hover:text-blue-900 hover:stroke-blue-900
                  transition-all duration-200 ease-in-out shadow-sm whitespace-nowrap">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 flex-shrink-0" fill="none"
                     viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M12 6H6a2 2 0 00-2 2v10a2 2 0 002 2h6m6-14h-6a2 2 0 00-2 2v10a2 2 0 002 2h6a2 2 0 002-2V8a2 2 0 00-2-2z" />
                </svg>
                <span class="truncate">Classrooms</span> <!-- Wrap text vào span truncate -->
            </a>
            <a href="/CheckPlagiarism"
               class="flex items-center gap-3 px-3 py-2 text-blue-900 rounded-md font-medium overflow-hidden truncate
                  hover:bg-blue-200 hover:scale-105 hover:text-blue-900 hover:stroke-blue-900
                  transition-all duration-200 ease-in-out shadow-sm whitespace-nowrap">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6 flex-shrink-0">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M10.125 2.25h-4.5c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125v-9M10.125 2.25h.375a9 9 0 0 1 9 9v.375M10.125 2.25A3.375 3.375 0 0 1 13.5 5.625v1.5c0 .621.504 1.125 1.125 1.125h1.5a3.375 3.375 0 0 1 3.375 3.375M9 15l2.25 2.25L15 12" />
                </svg>
                <span class="truncate">Plagiarism Detector</span> <!-- Wrap và truncate để cắt nếu dài -->
            </a>
            <a href="/Calendar/MyCalender"
               class="flex items-center gap-3 px-3 py-2 text-blue-900 rounded-md font-medium overflow-hidden truncate
                  hover:bg-blue-200 hover:scale-105 hover:text-blue-900 hover:stroke-blue-900
                  transition-all duration-200 ease-in-out shadow-sm whitespace-nowrap">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6 flex-shrink-0">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 0 1 2.25-2.25h13.5A2.25 2.25 0 0 1 21 7.5v11.25m-18 0A2.25 2.25 0 0 0 5.25 21h13.5A2.25 2.25 0 0 0 21 18.75m-18 0v-7.5A2.25 2.25 0 0 1 5.25 9h13.5A2.25 2.25 0 0 1 21 11.25v7.5m-9-6h.008v.008H12V13.5Zm0 2.25h.008v.008H12v-.008Zm0 2.25h.008v.008H12v-.008Zm2.25-4.5h.008V12h-.008v-.008Zm0 2.25h.008v.008h-.008V15Zm0 2.25h.008v.008h-.008v-.008Zm2.25-4.5h.008V12h-.008v-.008Zm0 2.25h.008v.008h-.008V15Zm0 2.25h.008v.008h-.008v-.008Zm-4.5 0h.008v.008h-.008v-.008Zm6.75-4.5h.008V12h-.008v-.008Zm0 2.25h.008v.008h-.008V15Zm0 2.25h.008v.008h-.008v-.008Zm2.25-4.5h.008V12h-.008v-.008Zm0 2.25v.008h-.008v-.008h.008Zm-2.25 6v.008h-.008v-.008h.008Z" />
                </svg>
                <span class="truncate">Reminder</span>
            </a>
            <a href="/AI/Feedback"
               class="flex items-center gap-3 px-3 py-2 text-blue-900 rounded-md font-medium overflow-hidden truncate
                  hover:bg-blue-200 hover:scale-105 hover:text-blue-900 hover:stroke-blue-900
                  transition-all duration-200 ease-in-out shadow-sm whitespace-nowrap">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                     stroke-width="1.5" stroke="currentColor"
                     class="w-6 h-6 flex-shrink-0">
                    <path stroke-linecap="round" stroke-linejoin="round"
                          d="M12 2.25a7.125 7.125 0 00-4.146 12.876c.451.378.696.94.696 1.533v1.086a.75.75 0 00.75.75h5.4a.75.75 0 00.75-.75v-1.086c0-.593.245-1.155.696-1.533A7.125 7.125 0 0012 2.25z" />
                    <path stroke-linecap="round" stroke-linejoin="round"
                          d="M9.75 18h4.5m-3 2.25h1.5" />
                </svg>
                <span class="truncate">AI Feedback</span>
            </a>

            <!-- Đẩy nhóm dưới xuống đáy -->
            <div class="flex-1"></div>
            <!-- Divider ngăn cách -->
            <div class="w-full border-b border-gray-300 my-4"></div>
            <!-- Nhóm chức năng dưới -->
            <a href="/Account"
               class="flex items-center gap-3 px-3 py-2 text-blue-900 rounded-md font-medium overflow-hidden truncate
                  hover:bg-blue-100 hover:scale-105 hover:text-blue-900 hover:stroke-blue-900
                  transition-all duration-200 ease-in-out shadow-sm whitespace-nowrap">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none"
                     viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6 flex-shrink-0">
                    <path stroke-linecap="round" stroke-linejoin="round"
                          d="M15.75 6a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0ZM4.501 20.118a7.5 7.5 0 0 1 14.998 0A17.933 17.933 0 0 1 12 21.75c-2.676 0-5.216-.584-7.499-1.632Z" />
                </svg>
                <span class="truncate">Account</span>
            </a>
            <a href="mailto:criticore.helpdesk@gmail.com" target="_blank"
               class="flex items-center gap-3 px-3 py-2 text-blue-900 rounded-md font-medium overflow-hidden truncate
                  hover:bg-blue-100 hover:scale-105 hover:text-blue-900 hover:stroke-blue-900
                  transition-all duration-200 ease-in-out shadow-sm whitespace-nowrap">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none"
                     viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6 flex-shrink-0">
                    <path stroke-linecap="round" stroke-linejoin="round"
                          d="M21.75 6.75v10.5a2.25 2.25 0 0 1-2.25 2.25h-15a2.25 2.25 0 0 1-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0 0 19.5 4.5h-15a2.25 2.25 0 0 0-2.25 2.25m19.5 0v.243a2.25 2.25 0 0 1-1.07 1.916l-7.5 4.615a2.25 2.25 0 0 1-2.36 0L3.32 8.91a2.25 2.25 0 0 1-1.07-1.916V6.75" />
                </svg>
                <span class="truncate">Feedback</span>
            </a>
            <a href="javascript:void(0)"
               class="flex items-center gap-3 px-3 py-2 text-red-600 font-medium rounded-md overflow-hidden truncate
                  hover:scale-105 hover:text-red-600 hover:stroke-red-600
                  transition-all duration-200 ease-in-out shadow-sm whitespace-nowrap"
               onclick="logout()">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 flex-shrink-0" fill="none"
                     viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a2 2 0 01-2 2H7a2 2 0 01-2-2V7a2 2 0 012-2h4a2 2 0 012 2v1" />
                </svg>
                <span class="truncate">Sign out</span>
            </a>
        </nav>
    </aside>
    <!-- Nội dung chính -->
    <main class="flex-1 h-full overflow-auto p-0 m-0">
        <!-- Thêm h-full overflow-auto, và p-0 m-0 để loại bỏ padding/margin -->
        @RenderBody()
    </main>
    <script>
        async function logout() {
            try {
                await fetch('/api/logout', { method: 'POST' });
                localStorage.clear();
                window.location.href = "https://criticore.edu.vn:8386";
            } catch (e) {
                console.error("Logout failed:", e);
            }
        }
    </script>
    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>