@page
@model Front_end.Pages.CheckPlagiarism.IndexModel
@{
    // Giữ Layout chính của bạn, giả định _Sidebar.cshtml bao gồm Tailwind CSS
    Layout = "~/Pages/Shared/_Sidebar.cshtml";
    ViewData["Title"] = "Check Plagiarism";
}

<div class="flex min-h-screen">
    <main class="flex-1 p-6">
        <div class="flex justify-between items-center mb-6">
            <div>
                <h1 class="text-3xl font-bold mb-2 text-blue-700">Plagiarism Checker</h1>
                <p class="text-gray-600 text-base">Upload your file to perform a plagiarism check using Copyleaks.</p>
            </div>
            <a href="/CheckPlagiarism/CopyleaksReportList"
               class="bg-green-600 text-white px-4 py-2 rounded-lg hover:bg-green-700 transition whitespace-nowrap text-base font-medium flex items-center space-x-2">
                <span>View Reports List</span>
            </a>
        </div>

        <div class="max-w-3xl p-6 bg-white rounded-lg shadow-md">
            <h2 class="text-xl font-semibold mb-4 text-gray-800">Upload File</h2>
            <form method="post" enctype="multipart/form-data" asp-page-handler="Check">

                <label class="block text-base font-medium text-gray-700 mb-2">
                    Select a file to check (.pdf, .doc, .docx, .txt)
                </label>

                <input type="file" name="FileToCheck"
                       accept=".txt, .doc, .docx, .pdf"
                       class="block w-full text-base text-gray-500 file:mr-4 file:py-2 file:px-4
              file:rounded-lg file:border-0 file:text-base file:font-semibold
              file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100 mb-4"
                       required />


                <button type="submit"
                        class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition font-medium text-base">
                    Check Now
                </button>
            </form>

            @if (Model.ScanResultMessage != null)
            {
                <div class="mt-6 p-4 rounded-lg font-medium text-base
                            @(Model.ScanResultMessage.Contains("Error") ? "bg-red-100 text-red-700 border border-red-300" : "bg-green-100 text-green-700 border border-green-300")">
                    @Model.ScanResultMessage
                </div>
            }
        </div>
    </main>
</div>